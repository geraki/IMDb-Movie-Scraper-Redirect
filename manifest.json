{
  "manifest_version": 3,
  "name": "IMDb Movie Scraper Button",
  "version": "1.0",
  "description": "Toolbar button that opens movie scraper page for IMDb movie IDs.",
  "action": {
    "default_title": "No IMDb movie ID detected"
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
